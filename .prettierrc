{
  "printWidth": 100,
  "singleQuote": true,
  "trailingComma": "es5",
  "tabWidth": 2,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "parser": "typescript",
  "overrides": [
    {
      "files": "*.yaml",
      "options": { "parser": "yaml" }
    },
    {
      "files": "*.json",
      "options": { "parser": "json" }
    }
  ]
}
